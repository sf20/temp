<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<!-- 配置日志文件输出目录 -->
		<Property name="LOG_HOME">D:/log</Property>
		<property name="FILE_NAME">testlog</property>
	</Properties>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%p] %logger{36} - %m%n" />
		</Console>

		<RollingFile name="RollingFileLog" fileName="${LOG_HOME}/${FILE_NAME}.log"
			filePattern="${LOG_HOME}/$${date:yyyy-MM}/${FILE_NAME}-%d{yyyy-MM-dd HH-mm}-%i.log">
			<!-- [%d{HH:mm:ss:SSS}] [%p] - %l - %m%n -->
			<PatternLayout pattern="[%d{HH:mm:ss.SSS}] [%p] %logger{36} - %m%n" />
			<TimeBasedTriggeringPolicy interval="30" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingFileLog" />
		</Root>
	</Loggers>
</Configuration>